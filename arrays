#include<iostream>
void push(int stack[],int &top,int elelment)
{
if(top==9)
{
cout<<"OVERFLOW";
exit(1);
}
else
{
top ++;
stack[top];
}
}
void pop(int stack[],int &top)
{
if(top==-1)
{
cout<<"UNDERFLOW";
exit(1);
}
else
{
cout<<"Element deleted is:"<<stack[top];
top --;
}
}
void display(int stack[],int top)
{
for(int i=top; i>=0; i--)
cout<<stack[i];
}
