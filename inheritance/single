//single level inheritance
#include <iostream> 
using namespace std; 
class base                      //base class
{
   public:
     int x;
   void getdata()
   {
     cout << "Enter the value of x = "; cin >> x;
   }
 };
class derive : public base       //derived class
{
   private:
    int y;
   public:
   void readdata()
   {
     cout << "Enter the value of y = "; cin >> y;
   }
   void product()
   {
     cout << "Product = " << x * y;
   }
 };
 
 int main()      //main function
 {
    derive a;     
    a.getdata();
    a.readdata();
    a.product();
    return 0;
 }
 //end of code                  //code for single level inheritence declared base class then derived class then main function 
